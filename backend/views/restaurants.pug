html
  head
    title= "Restaurants"
  body
    h1= message
    each restaurant in restaurantList
        li
          button(
            type='submit'
            style='width: 200px; height: 50px; background-color: white; margin-top: 100px'
            onclick= "navigateTo('" + restaurant + "');"
          )=restaurant


          
    script.
      var navigateTo = function(restaurant) {
        var outR = restaurant.replace(/\s/g,'');
        outR = outR.toLowerCase();
        window.location.href = '/restaurants/' + outR
      }

